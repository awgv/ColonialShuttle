<?xml version="1.0" encoding="utf-8"?>

<Defs>
  <Vehicles.VehicleBuildDef ParentName="VehicleBaseBuildable">
    <defName>ColonialShuttleBlueprint</defName>
    <label>Shuttle</label>
    <description>A variant of an imperial shuttle powered by an internal combustion engine. Can quickly transport colonists, items and animals anywhere you likeâ€”as long as you have enough chemfuel.</description>
    <graphicData>
      <texPath>ColonialShuttle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(6,3)</drawSize>
      <drawRotated>false</drawRotated>
      <shadowData>
        <volume>(4.1, 1.0, 1.8)</volume>
        <offset>(0, 0, -0.1)</offset>
      </shadowData>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <WorkToBuild>80000</WorkToBuild>
      <Flammability>0.4</Flammability>
    </statBases>
    <size>(5,3)</size>
    <researchPrerequisites>
      <li>ColonialShuttleResearch</li>
    </researchPrerequisites>
    <!-- Market values (mv) and mass (kg) of individual items are in the comments. -->
    <costList>
      <!-- 9mv / 0.25kg -->
      <Plasteel>100</Plasteel>
      <!-- 1.9mv / 0.5kg -->
      <Steel>120</Steel>
      <!-- 6mv / 1kg -->
      <Uranium>100</Uranium>
      <!-- 32mv / 0.6kg -->
      <ComponentIndustrial>8</ComponentIndustrial>
      <!-- 200mv / 0.6kg -->
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <thingToSpawn>ColonialShuttle</thingToSpawn>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </Vehicles.VehicleBuildDef>
</Defs>
